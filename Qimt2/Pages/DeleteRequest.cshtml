@page
@model Qimt2.Pages.DeleteRequestModel

@{
    ViewData["Title"] = "DeleteRequest";
}



<style>
    th {
        font-size: 16px;
        color: white;
    }
</style>

<div class="page-wrapper">
    <div style="padding: 110px 0 100px; padding-top:170px;" class="style1 bg-primary">
        <div class="container">
            <h2 style="color:white; font-family:Times New Roman" , Times, serif;">هل تريد بالتأكيد حذف الطلـب ؟</h2>
            <hr style="border: 1px solid black" />
            <br />
            <div>
                <table class="table table-striped" style="box-shadow:10px 10px 15px white">
                    <thead>
                        <tr>
                            <th scope="col">
                                الإسـم
                            </th>
                            <th scope="col">
                                رقم التليفـون
                            </th>
                            <th scope="col">
                                البريد الإلكترونى
                            </th>
                            <th scope="col">
                                نوع الطلب
                            </th>
                            <th scope="col">
                                وصف الطلب
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td style="color:white">
                                @Html.DisplayFor(model => model.Service.FullName)
                            </td>
                            <td style="color:white">
                                @Html.DisplayFor(model => model.Service.Phone)
                            </td>
                            <td style="color:white">
                                @Html.DisplayFor(model => model.Service.Email)
                            </td>
                            <td style="color:white">
                                @Html.DisplayFor(model => model.Service.ServiceType)
                            </td>
                            <td style="color:white">
                                @Html.DisplayFor(model => model.Service.ServiceDescription)
                            </td>
                        </tr>
                    </tbody>
                </table>
                <form method="post" style="direction:ltr">
                    <input type="hidden" asp-for="Service.Id" />
                    <input type="submit" value="حـذف" class="btn btn-danger" />
                </form>
            </div>
        </div>
    </div>
</div>
