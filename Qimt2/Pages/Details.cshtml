@page
@model Qimt2.Pages.DetailsModel

@{
    ViewData["Title"] = "DetailsModel";
}

<div class="page-wrapper">
    <section class="hero-wrap style1">
        <div class="row" style="padding-right: 100px;" class="style1 bg-primary">

            <div>
                <h2 class="text-light" style="font-family:Times New Roman" , Times, serif">تفاصيل الوظيفة</h2>
                <hr style="border: 1px solid black" /> <br />
                <dl class="row">
                    <dt class="col-sm-2 text-light" style="font-size:22px; font-family:Times New Roman" , Times, serif">
                        الوظيفـة
                    </dt>
                    <dd class="col-sm-10 text-light" style="font-size:17px; font-family:Times New Roman" , Times, serif">
                        @Html.DisplayFor(model => model.Jobs.Name)
                    </dd>
                    <br /><hr />
                    <dt class="col-sm-2 text-light" style="font-size:22px; font-family:Times New Roman" , Times, serif">
                        عن الوظيفـة
                    </dt>
                    <dd class="col-sm-10 text-light" style="font-size:17px; font-family:Times New Roman" , Times, serif">
                        @Html.DisplayFor(model => model.Jobs.About)
                    </dd>
                    <br /> <hr />
                    <dt class="col-sm-2 text-light" style="font-size:22px; font-family:Times New Roman" , Times, serif">
                        متطلبـات الوظيفـة
                    </dt>
                    <dd class="col-sm-10 text-light" style="font-size:17px; font-family:Times New Roman" , Times, serif">
                        @Html.DisplayFor(model => model.Jobs.Requirements)
                    </dd>
                    <br /> <hr />
                    <dt class="col-sm-2 text-light" style=" font-size:22px;font-family:Times New Roman" , Times, serif">
                        مسئوليـات الوظيفـة
                    </dt>
                    <dd class="col-sm-10 text-light" style="font-size:17px; font-family:Times New Roman" , Times, serif">
                        @Html.DisplayFor(model => model.Jobs.Responsibilities)
                    </dd>
                </dl>
            </div>
        </div>
    </section>
</div>