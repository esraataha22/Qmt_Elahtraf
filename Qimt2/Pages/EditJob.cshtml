@page
@model Qimt2.Pages.EditJobModel

@{
    ViewData["Title"] = "EditJob";
}

<div class="page-wrapper">
    <div style="padding: 110px 0 100px; padding-top:170px;" class="style1 bg-primary">
        <div class="container">
            <h2 style="color:white; font-family:Times New Roman" , Times, serif;">تعديل بيانات الوظيفة</h2>
            <hr style="border: 1px solid black" />
            <div class="row">
                <div class="col-lg-6 col-md-12">
                    <form method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Jobs.Id" />
                        <div class="form-group">
                            <label asp-for="Jobs.Name" class="control-label"></label>
                            <input asp-for="Jobs.Name" class="form-control" />
                            <span asp-validation-for="Jobs.Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Jobs.About" class="control-label"></label>
                            <textarea class="form-control" asp-for="Jobs.About" id="floatingTextarea2" style="height: 100px"></textarea>
                            <span asp-validation-for="Jobs.About" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Jobs.Requirements" class="control-label"></label>
                            <textarea class="form-control" asp-for="Jobs.Requirements" id=" floatingTextarea2" style="height: 100px"></textarea>
                            <span asp-validation-for="Jobs.Requirements" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Jobs.Responsibilities" class="control-label"></label>
                            <textarea class="form-control" asp-for="Jobs.Responsibilities" id=" floatingTextarea2" style="height: 100px"></textarea>
                            <span asp-validation-for="Jobs.Responsibilities" class="text-danger"></span>
                        </div>
                        <br />
                        <div class="form-group">
                            <input type="submit" value="حفـظ" class="btn btn-success" />
                        </div>
                    </form>
                </div>
                <div class="col-lg-6 col-md-4 d-flex justify-content-center">
                    <img src="assets/img/jobb2.png" height="200" />
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
