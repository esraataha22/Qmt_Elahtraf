@page
@model Qimt2.Pages.EditEmployeeModel

@{
    ViewData["Title"] = "EditEmployee";
}

<div class="page-wrapper">
    <div style="padding: 110px 0 100px; padding-top:170px;" class="style1 bg-primary">
        <div class="container">
            <h2 style="color:white; font-family:Times New Roman" , Times, serif;">تعديل بيانات الموظف</h2>
            <hr style ="border: 1px solid black" />
            <div class="row">
                <div class="col-lg-6 col-md-12">
                    <form method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Employee.Id" />
                        <div class="form-group">
                            <label asp-for="Employee.Name" class="control-label"></label>
                            <input asp-for="Employee.Name" class="form-control" />
                            <span asp-validation-for="Employee.Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Employee.Age" class="control-label"></label>
                            <input asp-for="Employee.Age" class="form-control" />
                            <span asp-validation-for="Employee.Age" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Employee.Address" class="control-label"></label>
                            <input asp-for="Employee.Address" class="form-control" />
                            <span asp-validation-for="Employee.Address" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Employee.Role" class="control-label"></label>
                            <input asp-for="Employee.Role" class="form-control" />
                            <span asp-validation-for="Employee.Role" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Employee.Salary" class="control-label"></label>
                            <input asp-for="Employee.Salary" class="form-control" />
                            <span asp-validation-for="Employee.Salary" class="text-danger"></span>
                        </div>
                        <br/>
                        <div class="form-group">
                            <input type="submit" value="حفـظ" class="btn btn-success" />
                        </div>
                    </form>
                </div>
                <div class="col-lg-6 col-md-4 d-flex justify-content-center">
                    <img src="assets/img/edit.png" height="250" />
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
