@inject SignInManager<IdentityUser> SignInManager
@{
    var hasExternalLogins = (await SignInManager.GetExternalAuthenticationSchemesAsync()).Any();
}


<ul class="nav nav-pills flex-column">
    <li class="nav-item"><a style="color:white; font-family:Times New Roman" , Times, serif;" class="nav-link text-light @ManageNavPages.IndexNavClass(ViewContext)" id="profile" asp-page="./Index">الحسـاب</a></li>
    <li class="nav-item"><a style="color:white; font-family:Times New Roman" , Times, serif;" class="nav-link text-light @ManageNavPages.EmailNavClass(ViewContext)" id="email" asp-page="./Email">البريد الإلكترونى</a></li>
    <li class="nav-item"><a style="color:white; font-family:Times New Roman" , Times, serif;" class="nav-link text-light @ManageNavPages.ChangePasswordNavClass(ViewContext)" id="change-password" asp-page="./ChangePassword">كلمة السـر</a></li>
    @if (hasExternalLogins)
    {
        <li id="external-logins" class="nav-item"><a style="color:white; font-family:Times New Roman" , Times, serif;" id="external-login" class="nav-link text-light @ManageNavPages.ExternalLoginsNavClass(ViewContext)" asp-page="./ExternalLogins">تسجيلات الدخول الخارجية</a></li>
    }
    <li class="nav-item"><a style="color:white; font-family:Times New Roman" , Times, serif;" class="nav-link text-light @ManageNavPages.TwoFactorAuthenticationNavClass(ViewContext)" id="two-factor" asp-page="./TwoFactorAuthentication">التوثيـق</a></li>
    <li class="nav-item"><a style="color:white; font-family:Times New Roman" , Times, serif;" class="nav-link text-light @ManageNavPages.PersonalDataNavClass(ViewContext)" id="personal-data" asp-page="./PersonalData">البيانات الشخصية</a></li>
</ul>
